<div class="requirements-wrapper">
  <%= form_with url: stories_path, local: true, html: { multipart: true } do |form| %>

    <div class="form-group">
      <%= form.label :file, "Upload Flashcard Data" %>
      <%= form.file_field :file, required: true %>
    </div>

    <div class="form-group">
      <%= form.label :format, "File Format" %>
      <%= form.select :format, ['CSV', 'JSON', 'XML'], {}, { required: true } %>
    </div>

    <div class="form-group">
      <%= form.label :flashcard_type, "Flashcard App Type" %>
      <%= form.select :flashcard_type, ['Anki', 'Pleco'], {}, { required: true } %>
    </div>

    <div class="form-group">
      <%= form.label :language, "Story Language" %>
      <%= form.select :language, ['English', 'French', 'Spanish', 'Mandarin'], {}, { required: true } %>
    </div>

    <div class="form-group">
      <%= form.label :level, "Your Language Proficiency Level" %>
      <%= form.select :level, ['Beginner', 'Intermediate', 'Advanced'], {}, { required: true } %>
    </div>

    <div class="form-group">
      <%= form.label :story_length, "Story Length (words)" %>
      <%= form.number_field :story_length, in: 100..5000, step: 100, required: true %>
    </div>

    <div class="form-group">
      <%= form.label :topic, "Write a topic for your story" %>
      <%= form.text_field :topic %>
    </div>

    <div class="form-group">
      <%= form.submit 'Generate Story', :class => 'button-primary' %>
    </div>

  <% end %>
</div>
